<%
  colors = { 
    'easy' => 'bg-green-500', 
    'medium' => 'bg-blue-500', 
    'hard' => 'bg-purple-600' 
  }
  
  balls = {
    'easy' => 'https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/items/poke-ball.png',
    'medium' => 'https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/items/great-ball.png',
    'hard' => 'https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/items/master-ball.png'
  }

  header_bg = colors[@task.difficulty] || 'bg-slate-500'
  ball_img = balls[@task.difficulty]
%>

<div class="min-h-screen flex items-center justify-center -mt-20 p-4">
  
  <div class="w-full max-w-2xl bg-white rounded-3xl shadow-2xl overflow-hidden border border-slate-200">
    
    <div class="<%= header_bg %> px-8 py-6 flex justify-between items-center relative overflow-hidden">
      <div class="absolute -right-10 -top-10 w-40 h-40 bg-white opacity-10 rounded-full"></div>
      
      <div>
        <h2 class="text-white text-sm font-bold uppercase tracking-widest opacity-90">Detalhes da Missão</h2>
        <h1 class="text-3xl font-extrabold text-white mt-1 drop-shadow-md"><%= @task.title %></h1>
      </div>

      <div class="relative z-10 bg-white p-2 rounded-full shadow-lg">
        <img src="<%= ball_img %>" alt="Dificuldade" class="w-16 h-16" style="image-rendering: pixelated;">
      </div>
    </div>

    <div class="p-8">
      
      <div class="flex items-center justify-between mb-8 bg-slate-50 p-4 rounded-xl border border-slate-100">
        <div class="flex flex-col">
          <span class="text-xs font-bold text-slate-400 uppercase">Recompensa</span>
          <span class="text-xl font-bold text-slate-700 flex items-center">
            <span class="text-yellow-500 mr-1">⭐</span> <%= @task.score_value %> XP
          </span>
        </div>

        <div class="h-10 w-px bg-slate-200"></div>

        <div class="flex flex-col items-end">
          <span class="text-xs font-bold text-slate-400 uppercase">Status Atual