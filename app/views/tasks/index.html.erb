<div class="flex justify-between items-center mb-8">
  <div>
    <h1 class="text-3xl font-extrabold text-slate-800">Missões Ativas</h1>
    <p class="text-slate-500">Complete tarefas para ganhar XP e capturar Pokémons.</p>
  </div>
  
  <%= link_to new_task_path, class: "flex items-center bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-full shadow-lg transform hover:-translate-y-1 transition duration-200" do %>
    <span class="text-xl mr-2">+</span> Nova Missão
  <% end %>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="tasks">
  <% @tasks.each do |task| %>
    <div class="relative bg-white rounded-2xl shadow-md border border-slate-100 overflow-hidden hover:shadow-xl transition-all duration-300 group <%= 'opacity-75 grayscale' if task.completed? %>">
      
      <% border_color = case task.difficulty 
         when 'easy' then 'bg-green-400'
         when 'medium' then 'bg-yellow-400'
         when 'hard' then 'bg-purple-600'
         end %>
      <div class="h-2 w-full <%= border_color %>"></div>

      <div class="p-6">
        <div class="flex justify-between items-start mb-4">
          <span class="inline-block px-2 py-1 text-xs font-bold uppercase tracking-wide rounded text-white <%= border_color %>">
            <%= task.difficulty %>
          </span>
          <span class="text-sm font-semibold text-slate-400"><%= task.score_value %> XP</span>
        </div>

        <h3 class="text-xl font-bold text-slate-800 mb-2 group-hover:text-blue-600 transition-colors">
          <%= task.title %>
        </h3>
        
        <p class="text-slate-500 text-sm mb-6 line-clamp-3">
          <%= task.description %>
        </p>

        <div class="border-t border-slate-100 pt-4 flex justify-between items-center">
          <% if task.completed? %>
            <span class="flex items-center text-green-600 font-bold text-sm">
              <svg class="w-5 h-5 mr-1" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
              Concluída
            </span>
            <div class="flex space-x-1 items-center">
              <%= link_to edit_task_path(task), class: "p-2 text-slate-400 hover:text-blue-500 rounded-full transition" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg>
              <% end %>
              
              <%= button_to task_path(task), method: :delete, form: { data: { turbo_confirm: 'Apagar?' } }, class: "p-2 text-slate-400 hover:text-red-500 rounded-full transition" do %>
                 <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
              <% end %>
            </div>

          <% else %>
            
            <%= button_to complete_task_path(task), method: :patch, class: "w-full bg-slate-100 hover:bg-green-50 text-slate-700 hover:text-green-700 font-semibold py-2 px-4 rounded-lg border border-slate-200 transition-colors flex items-center justify-center text-sm" do %>
              <span>Concluir Missão</span>
            <% end %>
             
             <div class="ml-2 flex items-center space-x-1">
               <%= link_to edit_task_path(task), class: "p-2 text-slate-400 hover:text-blue-600 hover:bg-blue-50 rounded-full transition" do %>
                 <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg>
               <% end %>
               
               <%= button_to task_path(task), method: :delete, 
                form: { data: { turbo_confirm: 'Essa missão será apagada para sempre! (Isso não pode ser desfeito)' } }, 
                class: "p-2 text-slate-400 hover:text-red-600 hover:bg-red-50 rounded-full transition cursor-pointer" do %>
                 <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>