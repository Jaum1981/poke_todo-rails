<%= form_with(model: task, class: "space-y-6") do |form| %>
  
  <% if task.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-md mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(task.errors.count, "erro") %> impediram salvar:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% task.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :title, "Título da Missão", class: "block text-sm font-bold text-slate-700 mb-1" %>
    <%= form.text_field :title, 
        placeholder: "Ex: Derrotar a Elite Four (Estudar Ruby)",
        class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm py-3 px-4 bg-slate-50" 
    %>
  </div>

  <div>
    <%= form.label :description, "Detalhes da Missão", class: "block text-sm font-bold text-slate-700 mb-1" %>
    <%= form.text_area :description, 
        rows: 4, 
        placeholder: "Descreva o que precisa ser feito...",
        class: "mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm py-3 px-4 bg-slate-50" 
    %>
  </div>

  <div>
    <%= form.label :difficulty, "Nível de Dificuldade (Recompensa)", class: "block text-sm font-bold text-slate-700 mb-1" %>
    <div>
    <%= form.label :difficulty, "Nível de Dificuldade (Escolha sua Pokébola)", class: "block text-sm font-bold text-slate-700 mb-3" %>
    
    <div class="grid grid-cols-3 gap-4">
      
      <label class="cursor-pointer group">
        <%= form.radio_button :difficulty, 'easy', class: "peer sr-only" %> <div class="flex flex-col items-center p-4 rounded-xl border-2 border-slate-200 bg-white transition-all duration-200 hover:border-red-300 peer-checked:border-red-600 peer-checked:bg-red-50 peer-checked:shadow-md peer-checked:scale-105">
          <img src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/items/poke-ball.png" alt="Poké Ball" class="w-12 h-12 mb-2 rendering-pixelated group-hover:rotate-12 transition-transform">
          <span class="font-bold text-slate-700 text-sm">Fácil</span>
          <span class="text-xs text-green-600 font-bold">+10 XP</span>
        </div>
      </label>

      <label class="cursor-pointer group">
        <%= form.radio_button :difficulty, 'medium', class: "peer sr-only" %>
        <div class="flex flex-col items-center p-4 rounded-xl border-2 border-slate-200 bg-white transition-all duration-200 hover:border-blue-300 peer-checked:border-blue-600 peer-checked:bg-blue-50 peer-checked:shadow-md peer-checked:scale-105">
          <img src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/items/great-ball.png" alt="Great Ball" class="w-12 h-12 mb-2 rendering-pixelated group-hover:rotate-12 transition-transform">
          <span class="font-bold text-slate-700 text-sm">Médio</span>
          <span class="text-xs text-blue-600 font-bold">+20 XP</span>
        </div>
      </label>

      <label class="cursor-pointer group">
        <%= form.radio_button :difficulty, 'hard', class: "peer sr-only" %>
        <div class="flex flex-col items-center p-4 rounded-xl border-2 border-slate-200 bg-white transition-all duration-200 hover:border-purple-300 peer-checked:border-purple-600 peer-checked:bg-purple-50 peer-checked:shadow-md peer-checked:scale-105">
          <img src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/items/master-ball.png" alt="Master Ball" class="w-12 h-12 mb-2 rendering-pixelated group-hover:rotate-12 transition-transform">
          <span class="font-bold text-slate-700 text-sm">Difícil</span>
          <span class="text-xs text-purple-600 font-bold">+50 XP</span>
        </div>
      </label>

    </div>
    <p class="mt-2 text-xs text-slate-500 text-center">Missões Lendárias requerem Master Balls!</p>
  </div>
    <p class="mt-2 text-sm text-slate-500">Escolha com sabedoria. Missões mais difíceis dão melhores recompensas!</p>
  </div>

  <div class="pt-4 flex items-center justify-end space-x-3 border-t border-slate-200 mt-6">
    <%= link_to "Cancelar", tasks_path, class: "text-slate-600 hover:text-slate-900 font-medium px-4 py-2" %>
    
    <%= form.button class: "inline-flex justify-center rounded-md border border-transparent bg-red-600 py-2 px-6 text-sm font-bold text-white shadow-sm hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-transform transform hover:scale-105" do %>
      Salvar Missão
    <% end %>
  </div>

<% end %>