<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(task.errors.count, "erro") %> impediram esta tarefa de ser salva:</h2>
      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="margin-bottom: 15px;">
    <%= form.label :title, "Título", style: "display: block" %>
    <%= form.text_field :title, style: "width: 100%; padding: 8px;" %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :description, "Descrição", style: "display: block" %>
    <%= form.text_area :description, rows: 4, style: "width: 100%; padding: 8px;" %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :difficulty, "Dificuldade (XP)", style: "display: block" %>
    <%= form.select :difficulty, 
        [
          ['Fácil (10 XP)', 'easy'], 
          ['Médio (20 XP)', 'medium'], 
          ['Difícil (50 XP)', 'hard']
        ], 
        {}, 
        style: "padding: 8px; width: 100%;" 
    %>
  </div>

  <div>
    <%= form.submit "Salvar Tarefa", style: "background-color: #007bff; color: white; padding: 10px 20px; border: none; cursor: pointer;" %>
  </div>
<% end %>