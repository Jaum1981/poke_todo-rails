<div class="min-h-screen -mt-10 flex items-center justify-center p-4 font-mono">
  
  <div class="relative w-full max-w-4xl bg-red-600 rounded-3xl shadow-[0_20px_50px_rgba(220,38,38,0.5)] border-b-8 border-red-800 overflow-hidden flex flex-col md:flex-row">
    
    <div class="w-full md:w-2/3 p-6 border-r-8 border-red-800 relative">
      
      <div class="flex items-start gap-4 mb-6">
        <div class="w-20 h-20 bg-blue-400 rounded-full border-4 border-white shadow-[inset_-5px_-5px_20px_rgba(0,0,0,0.5)] relative overflow-hidden">
          <div class="absolute top-3 left-4 w-6 h-6 bg-white rounded-full opacity-50 blur-sm"></div>
        </div>
        <div class="flex gap-2 mt-2">
          <div class="w-4 h-4 rounded-full bg-red-800 border border-red-900 animate-pulse"></div>
          <div class="w-4 h-4 rounded-full bg-yellow-400 border border-yellow-600"></div>
          <div class="w-4 h-4 rounded-full bg-green-500 border border-green-700"></div>
        </div>
      </div>

      <div class="bg-slate-200 rounded-bl-[3rem] rounded-tr-lg rounded-tl-lg rounded-br-lg p-6 shadow-inner border-4 border-slate-300 relative">
        
        <div class="bg-slate-900 rounded-lg border-4 border-slate-700 h-[500px] overflow-y-auto custom-scrollbar p-4 relative shadow-[inset_0_0_20px_rgba(0,0,0,0.8)]">
          
          <% if @pokemons.any? %>
            <div class="grid grid-cols-2 sm:grid-cols-3 gap-4">
              <% @pokemons.each do |pokemon| %>
                
                <div class="group relative bg-slate-800 rounded-xl border-2 border-slate-700 hover:border-green-400 transition-all p-2 flex flex-col items-center shadow-lg hover:shadow-green-500/20">
                  
                  <span class="absolute top-1 left-2 text-[10px] text-slate-500 font-bold">
                    No.<%= pokemon.poke_api_id.to_s.rjust(3, '0') %>
                  </span>

                  <div class="absolute top-1 right-1 opacity-0 group-hover:opacity-100 transition-opacity z-20">
                    <%= button_to pokemon_path(pokemon), method: :delete, data: { turbo_confirm: "Libertar #{pokemon.name}?" }, class: "text-red-500 hover:text-white hover:bg-red-500 rounded px-1 text-xs font-bold uppercase" do %>
                      X
                    <% end %>
                  </div>

                  <div class="w-24 h-24 flex items-center justify-center bg-slate-900/50 rounded-full mb-2 group-hover:bg-green-900/20 transition-colors">
                    <img src="<%= pokemon.sprite_url %>" class="w-20 h-20 rendering-pixelated transform group-hover:scale-110 transition-transform duration-300 filter drop-shadow-[0_0_5px_rgba(255,255,255,0.3)]" alt="<%= pokemon.name %>">
                  </div>

                  <div class="w-full bg-slate-900 rounded p-1 text-center border border-slate-700">
                    <h3 class="text-green-400 font-bold text-xs uppercase tracking-wider truncate"><%= pokemon.name %></h3>
                    <p class="text-[0.6rem] text-slate-500 uppercase mt-0.5">
                      Capturado: <%= pokemon.created_at.strftime("%d/%m") %>
                    </p>
                  </div>

                </div>
              <% end %>
            </div>

          <% else %>
            <div class="h-full flex flex-col items-center justify-center text-green-500/50 space-y-4">
              <svg class="w-16 h-16 animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path></svg>
              <p class="text-sm font-bold uppercase tracking-widest">Nenhum dado encontrado</p>
              <p class="text-xs text-center px-8">Visite a Lootbox para começar sua coleção.</p>
            </div>
          <% end %>

          <div class="absolute inset-0 bg-[linear-gradient(rgba(18,16,16,0)_50%,rgba(0,0,0,0.25)_50%),linear-gradient(90deg,rgba(255,0,0,0.06),rgba(0,255,0,0.02),rgba(0,0,255,0.06))] z-10 bg-[length:100%_2px,3px_100%] pointer-events-none"></div>
        </div>

        <div class="flex justify-between items-center mt-4 px-2">
          <div class="w-8 h-8 bg-red-600 rounded-full border border-red-800"></div>
          <div class="space-y-1">
            <div class="w-24 h-2 bg-slate-400 rounded-full"></div>
            <div class="w-24 h-2 bg-slate-400 rounded-full"></div>
          </div>
        </div>

      </div>
    </div>

    <div class="w-full md:w-1/3 bg-red-600 p-8 flex flex-col justify-between items-center relative border-t-8 md:border-t-0 md:border-l-8 border-red-800 shadow-[inset_10px_0_20px_rgba(0,0,0,0.2)]">
      
      <div class="bg-black/20 rounded-xl p-4 w-full text-center border-2 border-red-800 mb-8">
        <h2 class="text-white font-bold uppercase tracking-widest text-sm">Treinador</h2>
        <p class="text-yellow-400 font-black text-xl"><%= current_user.email.split('@')[0] %></p>
        <div class="mt-2 text-xs text-red-200 font-bold uppercase">
          Total Visto: <span class="text-white"><%= @pokemons.count %></span>
        </div>
      </div>

      <div class="flex flex-col items-center gap-8 w-full">
        
        <div class="relative w-32 h-32">
          <div class="absolute top-0 left-10 w-10 h-32 bg-slate-800 rounded shadow-lg border-b-4 border-slate-900"></div>
          <div class="absolute top-10 left-0 w-32 h-10 bg-slate-800 rounded shadow-lg border-b-4 border-slate-900"></div>
          <div class="absolute top-12 left-12 w-6 h-6 bg-slate-700 rounded-full opacity-50"></div>
        </div>

        <div class="flex gap-6 mt-4">
          <div class="flex flex-col items-center">
            <%= link_to root_path, class: "w-12 h-12 bg-slate-800 rounded-full shadow-[0_4px_0_#000] active:shadow-none active:translate-y-1 transition-all border-2 border-slate-600 flex items-center justify-center text-slate-400 font-bold text-xs" do %>
              B
            <% end %>
            <span class="text-red-900 font-bold text-xs mt-1">VOLTAR</span>
          </div>
          <div class="flex flex-col items-center -mt-4">
             <%= link_to lootbox_path, class: "w-12 h-12 bg-blue-500 rounded-full shadow-[0_4px_0_#1e3a8a] active:shadow-none active:translate-y-1 transition-all border-2 border-blue-300 flex items-center justify-center text-white font-bold text-xs" do %>
              A
            <% end %>
            <span class="text-red-900 font-bold text-xs mt-1">LOOT</span>
          </div>
        </div>

      </div>

      <div class="mt-auto w-full flex justify-end gap-2 pr-4 pt-8">
        <div class="w-16 h-2 bg-red-900 rounded-full transform -rotate-12 opacity-50"></div>
        <div class="w-16 h-2 bg-red-900 rounded-full transform -rotate-12 opacity-50"></div>
        <div class="w-16 h-2 bg-red-900 rounded-full transform -rotate-12 opacity-50"></div>
      </div>

    </div>

  </div>
</div>

<style>
  .custom-scrollbar::-webkit-scrollbar {
    width: 8px;
  }
  .custom-scrollbar::-webkit-scrollbar-track {
    background: #1e293b; 
  }
  .custom-scrollbar::-webkit-scrollbar-thumb {
    background: #4ade80; 
    border-radius: 4px;
  }
  .custom-scrollbar::-webkit-scrollbar-thumb:hover {
    background: #22c55e; 
  }
</style>